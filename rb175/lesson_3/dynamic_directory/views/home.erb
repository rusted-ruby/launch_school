<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= @title %></title>

    <link rel="stylesheet" href="stylesheets/pure-min.css">
    <link rel="stylesheet" href="stylesheets/fonts.css">
    <link rel="stylesheet" href="stylesheets/book_viewer.css">
</head>

<body>

  <div id="layout">
      <a href="#menu" id="menuLink" class="menu-link">
          <span></span>
      </a>

      <div id="main">
        <div class="header">
          <h1>Here are links to files</h1>
          <h2>please, enjoy them</h2>
        </div>

        <div>
          <li>
            <a href="http://localhost:4567"> Sort in ascending order</a>
          </li>
          <li>
            <a href="http://localhost:4567/reverse">Sort in descending order</a>
          </li>
        </div>

        <div class="content">
          <h2 class="content-subhead">Table of Contents</h2>

          <div class="pure-menu">
            <ul class="pure-menu-list">
              <% @fileAndPathPairs.each do |pair| %>
                <% fileName = pair[0] %>
                <% filePath = pair[1] %>
                <% url = filePath[6..] %> <!--cut out the public part of the url-->
                <li class="pure-menu-item">
                  <a href=<%="http://localhost:4567" + url%> class="pure-menu-link"><%= fileName %></a>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
  </div>

  <script type="text/javascript" src="/javascripts/ui.js"></script>
</body>
</html>
